- conversation_url = person_transaction_url(@recipient, @url_params.merge({:id => @payment.id.to_s}))
/ - binding.pry
%tr
  %td{:align => "left"}
    %font{body_font}
      = t("emails.new_cc_payment.you_have_received_new_payment", :listing_title => @listing.title, :payment_sum => humanized_money_with_symbol(@payment.sum_cents), :payer_full_name => @payment.payer.name(@payment.community), :payer_given_name => @payment.payer.given_name_or_username).html_safe

= render :partial => "action_button", :locals => { :text => t("emails.conversation_status_changed.view_thread"), :url => conversation_url}
